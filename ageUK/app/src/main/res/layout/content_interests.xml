<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.namz.ageuk.Interests"
    tools:showIn="@layout/activity_interests"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interests"
        android:id="@+id/textView21"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  What are some of the things you are interested in talking about?          "
        android:id="@+id/textView22"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prefs"
        android:orientation="vertical"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals     "
        android:id="@+id/animals"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:checked="false"
        android:background="#6e9952" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooking     "
        android:id="@+id/cooking"
        android:layout_below="@+id/animals"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:background="#00adef" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dancing     "
        android:id="@+id/dancing"
        android:layout_below="@+id/cooking"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:background="#e60087" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gardening "
        android:id="@+id/gardening"
        android:layout_below="@+id/dancing"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:background="#6e9952" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History       "
        android:id="@+id/history"
        android:layout_below="@+id/gardening"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:background="#df542b" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politics      "
        android:id="@+id/politics"
        android:checked="false"
        android:layout_below="@+id/history"
        android:layout_alignRight="@+id/dancing"
        android:layout_alignEnd="@+id/dancing"
        android:background="#00adef" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Television "
        android:id="@+id/television"
        android:layout_below="@+id/politics"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:background="#e60087" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking     "
        android:id="@+id/walking"
        android:checked="false"
        android:layout_below="@+id/television"
        android:layout_alignRight="@+id/television"
        android:layout_alignEnd="@+id/television"
        android:background="#df542b" />
    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:layout_marginTop="48dp"
        android:background="@drawable/iconsusan"
        android:layout_below="@+id/prefs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#2a3890" />

</RelativeLayout>
