<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.namz.ageuk.AvailabilityActivity"
    tools:showIn="@layout/activity_availability">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/timeofday"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textView11"
        android:layout_centerHorizontal="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Afternoon      "
        android:id="@+id/textView8" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Evening"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignRight="@+id/monday"
        android:layout_alignEnd="@+id/monday" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Morning"
        android:id="@+id/textView7"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="63dp"
        android:id="@+id/monday"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">


        <RadioButton
            android:checked="false"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/mona"
            android:allowUndo="false"
            android:background="#00adef" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="50dp"
        android:id="@+id/tuesday"
    android:orientation="horizontal"
        android:layout_below="@+id/monday"
        android:layout_centerHorizontal="true">


        <RadioButton
            android:checked="false"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tuea"
            android:background="#00adef" />


    </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
            android:id="@+id/wednesday"
        android:orientation="horizontal"
            android:layout_below="@+id/tuesday"
            android:layout_centerHorizontal="true">

            <RadioButton
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weda"
            android:background="#00adef" />


        </LinearLayout>

         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
             android:id="@+id/thursday"
        android:orientation="horizontal"
             android:layout_below="@+id/wednesday"
             android:layout_centerHorizontal="true">

             <RadioButton
                 android:checked="false"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:id="@+id/thursa"
                 android:background="#00adef" />

         </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/friday"
        android:orientation="horizontal"
        android:layout_below="@+id/thursday"
        android:layout_centerHorizontal="true">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/saturday"
        android:orientation="horizontal"
        android:layout_below="@+id/friday"
        android:layout_centerHorizontal="true">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/sunday"
        android:orientation="horizontal"
        android:layout_below="@+id/saturday"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suna"
            android:background="#00adef" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When are you available?"
        android:id="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Monday"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/monday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tuesday"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/tuesday"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wednesday"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/wedm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Thursday"
        android:id="@+id/textView14"
        android:layout_below="@+id/wednesday"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Friday"
        android:id="@+id/textView15"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Saturday"
        android:id="@+id/textView16"
        android:layout_below="@+id/friday"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sunday"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/sunday"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:foreground="@drawable/iconsusan"
        android:layout_below="@+id/sunday"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="interests"
        android:id="@+id/button9"
        android:textColor="#ffffff"
        android:background="#2a3890"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/mone"
        android:background="#6d9952"
        android:layout_alignTop="@+id/monday"
        android:layout_alignLeft="@+id/tuee"
        android:layout_alignStart="@+id/tuee" />

    <RadioButton
        android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tuem"
        android:background="#df542b"
        android:layout_alignTop="@+id/tuesday"
        android:layout_toLeftOf="@+id/button9"
        android:layout_toStartOf="@+id/button9" />

    <RadioButton
        android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tuee"
        android:background="#6d9952"
        android:layout_below="@+id/monday"
        android:layout_alignLeft="@+id/wede"
        android:layout_alignStart="@+id/wede" />

    <RadioButton android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/wedm"
        android:background="#df542b"
        android:layout_alignTop="@+id/wednesday"
        android:layout_alignLeft="@+id/tuem"
        android:layout_alignStart="@+id/tuem" />

    <RadioButton
        android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/monm"
        android:background="#df542b"
        android:layout_alignTop="@+id/monday"
        android:layout_alignLeft="@+id/tuem"
        android:layout_alignStart="@+id/tuem" />

    <RadioButton
        android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/wede"
        android:background="#6d9952"
        android:layout_below="@+id/tuesday"
        android:layout_alignLeft="@+id/thurse"
        android:layout_alignStart="@+id/thurse" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thursm"
        android:background="#df542b"
        android:layout_alignTop="@+id/thursday"
        android:layout_alignLeft="@+id/wedm"
        android:layout_alignStart="@+id/wedm" />

    <RadioButton
        android:checked="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/thurse"
        android:background="#6d9952"
        android:layout_below="@+id/wednesday"
        android:layout_alignLeft="@+id/frie"
        android:layout_alignStart="@+id/frie" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frim"
        android:background="#df542b"
        android:layout_alignTop="@+id/friday"
        android:layout_alignLeft="@+id/thursm"
        android:layout_alignStart="@+id/thursm" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/satm"
        android:background="#df542b"
        android:layout_below="@+id/friday"
        android:layout_alignLeft="@+id/thursm"
        android:layout_alignStart="@+id/thursm" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sunm"
        android:background="#df542b"
        android:layout_alignTop="@+id/sunday"
        android:layout_alignLeft="@+id/satm"
        android:layout_alignStart="@+id/satm" />

    <RadioButton android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fria"
        android:background="#00adef"
        android:layout_alignTop="@+id/friday"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sate"
        android:background="#6d9952"
        android:layout_alignTop="@+id/sata"
        android:layout_alignLeft="@+id/sune"
        android:layout_alignStart="@+id/sune" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sune"
        android:background="#6d9952"
        android:layout_alignTop="@+id/sunday"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sata"
        android:background="#00adef"
        android:layout_below="@+id/friday"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frie"
        android:background="#6d9952"
        android:layout_alignTop="@+id/fria"
        android:layout_alignLeft="@+id/sune"
        android:layout_alignStart="@+id/sune" />


</RelativeLayout>
