<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.namz.ageuk.PickMatch"
    android:background="@drawable/background">


        <TextView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/editText5"
            android:text="Alice Brooks, 86, Canary Wharf \n Animals, Cooking\n"
            android:textColor="#000000"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView28"
            android:layout_alignStart="@+id/textView28" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="Helen Collins, 74, Edinburgh \n Dancing, Walking \n"
            android:id="@+id/textView27"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_above="@+id/textView28"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="Joshua Wilson, 79, Hammersmith \n Gardening, Television\n"
            android:id="@+id/textView28"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_above="@+id/editText5"
            android:layout_alignLeft="@+id/textView27"
            android:layout_alignStart="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find your Match"
        android:id="@+id/textView29"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView30"
        android:text="Touch the name to find out more about the person"
        android:layout_below="@+id/textView29"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />


</RelativeLayout>
